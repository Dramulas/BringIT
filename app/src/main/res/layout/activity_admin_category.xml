<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_giris"
    tools:context=".AdminAddNewProductActivity"
    >


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="@string/add_new_product"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/Bakery_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/bakery"
            />

        <ImageView
            android:id="@+id/Vegetable_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/vegetables"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/Meat_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/meat"
            />

        <ImageView
            android:id="@+id/Dairy_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/dairy"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/Soda_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/sodas"
            />

        <ImageView
            android:id="@+id/Cleaning_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/cleaning"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp">



        <ImageView
            android:id="@+id/Cosmetics_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/cosmetics"
            />

        <ImageView
            android:id="@+id/Pet_s"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/pet"
            />

    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/check_orders_btn"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:text="Maintain Products"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/admin_logout_btn"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@color/colorPrimaryDark"
        android:text="Admin Logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />


</RelativeLayout>